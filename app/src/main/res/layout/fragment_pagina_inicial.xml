<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTextNome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".PaginaInicial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#FFFFFF"
        android:backgroundTint="@color/caramelo"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/azulmy"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/txtViewCadastro"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="50sp"
            android:paddingTop="5sp"
            android:text="Cadastro"
            android:textColor="@color/laranjamed"
            android:textSize="40sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingStart="30sp"
        android:paddingTop="30sp"
        android:text="@string/nome"
        android:textColor="@color/azulmy"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editTextNomeCompleto"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName" />

</LinearLayout>
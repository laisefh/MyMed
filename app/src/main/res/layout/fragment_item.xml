<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewRemedios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/laranjatransparente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewRemedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Paracetamol"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="3dp" />

            <TextView
                android:id="@+id/textViewHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="De 6 horas em 6 horas"
                android:textColor="@color/azulmy"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="31dp" />

            <TextView
                android:id="@+id/textViewAnot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/anotacoes"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="66dp" />

            <Button
                android:id="@+id/buttonEditarRemedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Button"
                tools:layout_editor_absoluteX="222dp"
                tools:layout_editor_absoluteY="19dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="anotacoes"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="94dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout >
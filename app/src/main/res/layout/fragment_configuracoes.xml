<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".configuracoes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:src="@drawable/config" />

        <TextView
            android:id="@+id/txtViewConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:text="@string/config"
            android:textColor="@color/azulmy"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewConfigNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:paddingTop="5sp"
        android:text="@string/nome"
        android:textColor="@color/azulmy"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editTextNomeCompleto"
        android:layout_width="339dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/borda"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtViewNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/dataNascimento"
        android:textColor="@color/azulmy"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextConfigDia"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/borda"
            android:digits="0123456789"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtConfigBarra"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/azulmy"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextConfigMes"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/borda"
            android:digits="0123456789"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/azulmy"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewConfigBarra2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/azulmy"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextConfigAno"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/borda"
            android:digits="0123456789"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:hint="0000"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewConfigEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/Email"
        android:textColor="@color/azulmy"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editTextConfigEmail"
        android:layout_width="339dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/borda"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtViewConfigSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/senha"
        android:textColor="@color/azulmy"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editTextConfigSenha"
        android:layout_width="339dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/borda"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfigSalvar"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/btnlaranja"
        android:text="@string/salvar"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnConfigAnotacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/caderno" />

        <ImageButton
            android:id="@+id/btnConfigAdicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/add" />

        <ImageButton
            android:id="@+id/btnConfigHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/casa" />

        <ImageButton
            android:id="@+id/btnConfigConfiguracoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/btnConfigContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/contrato" />

    </LinearLayout>

</LinearLayout>